@model IEnumerable<KlientRakendus.Data.TaskModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Task List</h1>

<hr />
<p>
    <a class="btn btn-primary mt-2" asp-action="Create">Add Task</a>
</p>
@foreach (var item in Model)
{
    <div class="card mt-5">
        <div class="card-header">
            Task Card Nr @Html.DisplayFor(modelItem => item.Id)
        </div>
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Completed) @Html.DisplayFor(modelItem => item.Title)</h5>
            <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </div>
    </div>
}

